# AI Services Configuration
# Configuration for AI email summarization and classification

# AI Provider Selection
# Options: claude, openai
AI_PROVIDER=claude

# Claude API Configuration (Anthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=300
CLAUDE_TEMPERATURE=0.3

# OpenAI API Configuration (Alternative)
# Get your API key from: https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=300
OPENAI_TEMPERATURE=0.3

# AI Processing Settings
AI_BATCH_SIZE=10
AI_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3
AI_RETRY_DELAY=1000

# Feature Flags
ENABLE_AI_SUMMARIES=true
ENABLE_AUTO_CATEGORIZATION=true
ENABLE_IMPORTANCE_DETECTION=true
ENABLE_ME_RELATED_DETECTION=true

# Prompt Configuration
SUMMARIZATION_MAX_LENGTH=150
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7

# Caching (optional - for development)
ENABLE_AI_CACHE=false
AI_CACHE_TTL=3600

# Logging
AI_LOG_LEVEL=info
AI_LOG_REQUESTS=true
AI_LOG_RESPONSES=false

# Rate Limiting (to avoid API quota issues)
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000

# Cost Tracking (optional)
TRACK_AI_COSTS=true
AI_COST_PER_1K_TOKENS=0.003
