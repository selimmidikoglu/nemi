# iOS Application Configuration
# Note: iOS apps typically use Info.plist and configuration files
# This file is for build-time environment variables and CI/CD

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30

# Environment
ENVIRONMENT=development
DEBUG_MODE=true

# Firebase Configuration (for authentication)
# Download GoogleService-Info.plist from Firebase Console
# Place it in iOS/NemiAIInbox/ directory
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_API_KEY=your-firebase-api-key

# Bundle Configuration
BUNDLE_IDENTIFIER=com.nemi.inbox
APP_DISPLAY_NAME=NemiAI Inbox
APP_VERSION=1.0.0
BUILD_NUMBER=1

# Apple Push Notifications
APNS_ENABLED=true
APNS_ENVIRONMENT=development

# Feature Flags
ENABLE_AI_SUMMARIES=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MENU=true

# API Keys (for client-side services)
# Note: Never commit real API keys to git
ANALYTICS_KEY=your-analytics-key-here
CRASHLYTICS_KEY=your-crashlytics-key-here

# Xcode Build Settings
COMPILER_INDEX_STORE_ENABLE=NO
ENABLE_BITCODE=NO

# Simulator Configuration
SIMULATOR_DEVICE=iPhone 15 Pro
SIMULATOR_OS=iOS 17.0

# Networking
ENABLE_NETWORK_LOGGING=true
USE_MOCK_API=false

# UI Configuration
DEFAULT_THEME=system
ENABLE_DARK_MODE=true

# Notification Settings
DEFAULT_NOTIFICATION_CATEGORIES=Work,Personal,Me-related
NOTIFICATION_SOUND=default

# Cache Configuration
ENABLE_IMAGE_CACHE=true
IMAGE_CACHE_SIZE_MB=100
EMAIL_CACHE_SIZE=500

# Security
ENABLE_SSL_PINNING=false
REQUIRE_BIOMETRIC_AUTH=false

# Testing
ENABLE_TEST_ACCOUNTS=true
TEST_USER_EMAIL=demo@example.com
TEST_USER_PASSWORD=password123
