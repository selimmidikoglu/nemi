{
  "name": "nemi-ai-inbox-backend",
  "version": "1.0.0",
  "description": "Backend API for NemiAI Inbox - AI-powered email management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "ts-node src/database/migrate.ts",
    "seed": "ts-node src/database/seed.ts",
    "test": "jest",
    "test:ai": "ts-node -O '{\"module\":\"commonjs\"}' ../scripts/test-ai-analysis.ts",
    "lint": "eslint src --ext .ts",
    "db:reset": "../scripts/reset-database.sh"
  },
  "keywords": [
    "email",
    "ai",
    "inbox",
    "api"
  ],
  "author": "NemiAI",
  "license": "UNLICENSED",
  "dependencies": {
    "@google-cloud/pubsub": "^5.2.0",
    "@ngrok/ngrok": "^1.6.0",
    "apn": "^2.2.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "googleapis": "^131.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.5",
    "node-cron": "^3.0.3",
    "node-imap": "^0.9.6",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
