# Database Configuration
# PostgreSQL database settings for NemiAIInbox

# Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nemi_ai_inbox
DB_USER=nemi
DB_PASSWORD=nemi_dev_password

# Connection String (alternative to individual settings)
DATABASE_URL=postgresql://nemi:nemi_dev_password@localhost:5432/nemi_ai_inbox

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# SSL Configuration
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Migration Settings
MIGRATION_TABLE_NAME=migrations
RUN_MIGRATIONS_ON_STARTUP=false

# Seeding Settings
SEED_DATA_ON_INIT=false
CREATE_DEMO_ACCOUNT=true

# Backup Settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# Query Logging
LOG_QUERIES=false
LOG_QUERY_PARAMS=false
SLOW_QUERY_THRESHOLD=1000

# Performance
ENABLE_QUERY_CACHE=true
CACHE_TTL=300

# Security
ENCRYPT_SENSITIVE_DATA=false
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring
ENABLE_DB_MONITORING=false
MONITORING_INTERVAL=60000

# Testing Database (for tests)
TEST_DB_NAME=nemi_ai_inbox_test
TEST_DB_USER=nemi_test
TEST_DB_PASSWORD=test_password

# Docker PostgreSQL Settings (for docker-compose)
POSTGRES_DB=nemi_ai_inbox
POSTGRES_USER=nemi
POSTGRES_PASSWORD=nemi_dev_password
POSTGRES_INITDB_ARGS=--encoding=UTF8

# pgAdmin Settings (optional database UI)
PGADMIN_DEFAULT_EMAIL=admin@nemi.local
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_LISTEN_PORT=5050
