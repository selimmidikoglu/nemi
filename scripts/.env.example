# Script Configuration
# Environment variables for setup and development scripts

# Script Behavior
VERBOSE_OUTPUT=true
SKIP_PREREQUISITES_CHECK=false
AUTO_CONFIRM=false

# Installation Settings
SKIP_NPM_INSTALL=false
SKIP_BACKEND_INSTALL=false
SKIP_DATABASE_SETUP=false

# Database Setup
AUTO_CREATE_DATABASE=true
AUTO_RUN_MIGRATIONS=true
AUTO_SEED_DATA=true
DROP_EXISTING_DATABASE=false

# iOS Simulator Settings
DEFAULT_SIMULATOR=iPhone 15 Pro
AUTO_OPEN_SIMULATOR=true
AUTO_LAUNCH_APP=true
BUILD_CONFIGURATION=Debug

# Development Settings
AUTO_START_BACKEND=true
AUTO_START_IOS=true
BACKEND_WAIT_TIMEOUT=30
SIMULATOR_BOOT_TIMEOUT=60

# Logging
ENABLE_SCRIPT_LOGGING=true
LOG_FILE_PATH=./setup.log
LOG_LEVEL=info

# Error Handling
EXIT_ON_ERROR=true
RETRY_ON_FAILURE=false
MAX_RETRY_ATTEMPTS=3

# Colors (for terminal output)
ENABLE_COLORS=true
COLOR_INFO=blue
COLOR_SUCCESS=green
COLOR_WARNING=yellow
COLOR_ERROR=red

# Cleanup
AUTO_CLEANUP_ON_FAILURE=false
KEEP_TEMP_FILES=false
