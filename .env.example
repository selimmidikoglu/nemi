# Root Environment Configuration
# This file contains shared environment variables for the entire monorepo
# Copy this to .env and customize as needed

# Project Configuration
PROJECT_NAME=NemiAIInbox
ENVIRONMENT=development

# Default Ports
BACKEND_PORT=3000
FRONTEND_PORT=8080

# Database Configuration (shared)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nemi_ai_inbox
DB_USER=nemi
DB_PASSWORD=nemi_dev_password

# For Docker Compose
POSTGRES_USER=nemi
POSTGRES_PASSWORD=nemi_dev_password
POSTGRES_DB=nemi_ai_inbox

# pgAdmin Configuration (optional - for database management UI)
PGADMIN_DEFAULT_EMAIL=admin@nemi.local
PGADMIN_DEFAULT_PASSWORD=admin

# Development Settings
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true

# iOS Simulator Settings
DEFAULT_SIMULATOR=iPhone 15 Pro
IOS_SIMULATOR_DEVICE=iPhone 15 Pro

# Docker Settings
DOCKER_COMPOSE_PROJECT_NAME=nemi-ai-inbox
